@model IEnumerable<BukuTamuTest.Models.Tamu>
@{
    ViewData["Title"] = "Tamu Page";
}

<h1>Daftar Tamu</h1>

<a asp-action="Tambah" class="btn btn-primary">Tambah</a>

<table class="table table-strip">
    <thead>
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Alamat</th>
            <th>Tanggal / waktu</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>1</td>
                <td>@Html.DisplayFor(modelItem => item.Nama)</td>
                <td>@Html.DisplayFor(modelItem => item.Alamat)</td>
                <td>@Html.DisplayFor(modelItem => item.TanggalWaktu)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                        onsubmit="return confirm('Apakah Anda yakin ingin menghapus?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Alamat</th>
            <th>Tanggal / waktu</th>
        </tr>
    </tfoot>
</table>